{
  "manifest_version": 2,
  "name": "Import/Extract Active Tab URLs",
  "version": "1.2",
  "description": "Import/Extract active tab URLs.",
  "permissions": [
    "tabs",
    "downloads"
  ],
  "browser_action": {
    "default_title": "Toggle Sidebar"
  },
  "sidebar_action": {
    "default_title": "Tab URL Importer/Exporter",
    "default_panel": "sidebar/sidebar.html",
    "open_at_install": false,
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    "sidebar/sidebar.html"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/franktankbank/tab-extract/refs/heads/main/update/update.json",
      "id": "{9ff12cf6-e2d3-42f8-9f25-16e8a2ac1762}"
    }
  }
}
